---
type Props = {
  id?: string;
  class?: string;
};

const { id, class: className } = Astro.props;
---

<h2 id={id} class:list={['fancy', className]}><slot /></h2>
<style>
  .fancy {
    position: relative;
  }
  .fancy:before {
    @apply bg-theme-primary dark:bg-theme-dark-primary;
    content: '';
    min-width: 50px;
    height: 15px;
    position: absolute;
    left: -10px;
    bottom: -5px;
    opacity: 0.6;
    z-index: -2;
  }
</style>
